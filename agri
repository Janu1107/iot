#include <Wire.h>  
const int buzzer = 11; 
const int light = 13; 
const int light1 = 10; 
const int light2 = 12; 
int moisture; 
void setup() { 
  pinMode(A0, INPUT); 
  Serial.begin(9600);  
  pinMode(buzzer, OUTPUT);  
  pinMode(light, OUTPUT); 
  pinMode(light1, OUTPUT); 
  pinMode(light2, OUTPUT); 
  pinMode(9, OUTPUT); 
 
 
